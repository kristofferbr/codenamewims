<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Indigo400"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <EditText
            android:id="@+id/item_textfield"
            android:layout_width="282dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/add_item_dotdotdot"
            android:textColorHint="@drawable/edittext_hint"
            android:singleLine="true"
            android:inputType="text"
            android:imeOptions="actionDone"/>

        <Button
            android:id="@+id/item_add_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="@string/plus"
            android:textColor="@color/White"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_textfield"
            android:background="@drawable/start_button"/>

        <ScrollView
            android:layout_below="@+id/item_textfield"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <GridLayout
                android:id="@+id/itemListGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_edittext"
                android:layout_marginTop="5dp"
                android:columnCount="1"
                android:visibility="invisible">
            </GridLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>